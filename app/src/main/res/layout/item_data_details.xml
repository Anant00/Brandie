<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.bradie.app.apiservice.Hit" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="16dp"
            app:count="@{item.likes}"
            app:drawableStartCompat="@drawable/ic_baseline_star_border_24"
            app:drawableTint="@color/colorPrimaryDark"
            tools:text="12.5K" />

        <TextView
            android:id="@+id/tvBp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="16dp"
            app:count="@{item.views}"
            app:drawableStartCompat="@drawable/ic_baseline_remove_red_eye_24"
            app:drawableTint="@color/colorPrimaryDark"
            tools:text="12.5K" />

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="16dp"
            app:count="@{item.downloads}"
            app:drawableStartCompat="@drawable/ic_baseline_reply_24"
            app:drawableTint="@color/colorPrimaryDark"
            tools:text="1K" />

    </LinearLayout>
</layout>